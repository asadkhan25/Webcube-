                            "    pm.response.to.have.status(400);",
                            "});",
                            "",
                            "pm.test(\"Error message present\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.success).to.be.false;",
                            "    pm.expect(jsonData.message).to.include('required');",
